<?xml version='1.0' encoding='utf-8'?>
<templates id="template" xml:space="preserve">

    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('before-footer')]" position="after">


          <div class="row">
            <div class="col-sm-7 col-md-6 ms-auto">
                <table class="table table-sm o_main_table"  style="width: 100%; border-collapse: collapse;" name="invoice">
                    <thead>
                        <span style="width: 100%; border-collapse: collapse;" />
                        <tr>
                            <th name="th_date" class="text-left"
                                style="border: 1px solid #ccc; padding: 8px; text-align: left;">
                                <span>Rate</span>
                            </th>
                            <th name="th_product" class="text-left"
                                style="border: 1px solid #ccc; padding: 8px; text-align: left;">
                                <span>Taxable Amount</span>
                            </th>
                            <th name="th_product" class="text-left"
                                style="border: 1px solid #ccc; padding: 8px; text-align: left;">
                                <span>VAT</span>
                            </th>
                        </tr>

                    </thead>
                    <tbody>
                        <t t-set="sum_taxamt" t-value="0" />
                        <t t-set="sum_vat" t-value="0" />
                        <t t-foreach="env.pos.get_order().tax_mapping" t-as="tax" t-key="tax_index">
                            <t t-set="sum_taxamt" t-value="sum_taxamt+tax['taxbl_amt']" />
                            <t t-set="sum_vat" t-value="sum_vat + tax['tax_amt']" />

                            <tr style="border: 1px solid #ccc;">
                                <td name="rate_name" class="text-left" style="border: 1px solid #ccc;">
                                    <span t-esc="tax['name']" />( <span t-esc="tax['tax_code']" />
                                    ) </td>
                                <td name="taxable_amount" class="text-left" style="border: 1px solid #ccc;">
                                    <span t-esc="tax['taxbl_amt']" />
                                </td>
                                <td name="vate" class="text-left">
                                    <span t-esc="tax['tax_amt']" />
                                </td>
                            </tr>
                        </t>
                        <tr>
                            <th name="th_date" class="text-left"
                                style="border: 1px solid #ccc; padding: 8px; text-align: left;">
                                <span></span>
                            </th>
                            <th name="th_product" class="text-left"
                                style="border: 1px solid #ccc; padding: 8px; text-align: left;">
                                <span> Total Taxable Amount : <t t-esc="sum_taxamt" /></span>
                            </th>
                            <th name="th_product" class="text-left"
                                style="border: 1px solid #ccc; padding: 8px; text-align: left;">
                                <span>Total VAT <t t-esc="sum_vat" />

                                </span>
                            </th>
                        </tr>
                    </tbody>

                </table>
            </div>
          </div>

            <div > 
                <br />
                <h2 class="pos-receipt-center-align">
                  SCU INFORMATION
                </h2>
                <p style="font-size: 11px !important;">
                  <span>Date  Time: <t t-esc="env.pos.get_order().ke_etims_sdc_date_time"/>
                  </span>
                </p>

                <div class="text-left" >
                  <p style="font-size: 11px !important;">
                    <span>SCU ID: <t t-esc="env.pos.get_order().sdcId"/>
                    </span>
                  </p>
                  <p style="font-size: 11px !important;">
                    <span>CU INVOICE NO: <t t-esc="env.pos.get_order().sdcId"/>/ <t t-esc="env.pos.get_order().branch_seq"/>
                    </span>
                  </p>
                </div>
                <div style="text-center;font-size: 11px  !important"  class="pos-receipt-center-align" t-if="env.pos.get_order().ke_etims_rcpt_sign">
                  <span  >Internal Data:
                    <br/>
                     <t t-esc="env.pos.get_order().ke_etims_intrl_data_formatted"/>
                    </span>
                    <br/>
                    <span  >
                      Receipt signature <br/>
                     <t t-esc="env.pos.get_order().ke_etims_rcpt_sign_formatted"/>
                    </span>
                    <br/>

                  <img t-if="env.pos.get_order().etims_qr_code" id="posqrcode"  t-att-src="'data:image/png;base64,' + env.pos.get_order().etims_qr_code"  width="110" heigh="110" style="margin: 0 auto !important;"/>
                </div>
                
              </div>
        
       </xpath>
    </t>
</templates>
